<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <!-- Remove EditText bottom line in disabled mode -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>


    <style name="icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium_24</item>
    </style>

    <style name="icon.left">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="icon.right">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
    </style>

    <!-- Contacts page header -->
    <style name="user_rating">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="user_rating.value">
        <item name="android:textSize">@dimen/text_size_user_rating_value</item>
    </style>

    <style name="user_rating.caption">
        <item name="android:textSize">@dimen/text_size_user_rating_caption</item>
    </style>

    <!-- Contacts page outer LinearLayout -->
    <style name="outer_layout">
        <item name="android:layout_marginBottom">@dimen/spacing_small_8</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Contacts page inner LinearLayout style -->
    <style name="inner_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Contacts page TextEdit elements style -->
    <style name="text_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:layout_marginLeft">@dimen/spacing_larger_72</item>
        <item name="android:background">@color/grey_light</item>
    </style>


    <!--drawer header-->

    <style name="drawer_header">
        <item name="android:textColor">@android:color/white</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--
TODO req sdk 16+
-->
    <style name="drawer_header.user_name" parent="drawer_header">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="drawer_header.email" parent="drawer_header">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
    </style>

</resources>
